<Ui>
	<Script file="RangeDetector.lua"/>

	<!-- Main frame -->
	<Frame name="RangeDetector" toplevel="true" movable="true" enableMouse="true" hidden="false" parent="UIParent">
		<Size>
			<AbsDimension x="30" y="30" />
		</Size>

		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="$parent_bg">
					<Size x="30" y="30" />

					<Anchors>
						<Anchor point="CENTER">
							<Offset x="0" y="0" />
						</Anchor>
					</Anchors>

					<Color r="1" g="0" b="0" a="0.2" />
				</Texture>
			</Layer>
		</Layers>

		<Scripts>
			<OnEvent>
				if event == "ADDON_LOADED" and not hasAddonBeenLoaded then
					if rdt_slot then
						this.slot = rdt_slot
					else
						this.slot = 0
						rdt_slot = 0
					end

					if rdt_x and rdt_y then
						this.ofsx = rdt_x
						this.ofsy = rdt_y
					else
						this.ofsx = 0
						this.ofsy = 0
						rdt_x = 0
						rdt_y = 0
					end

					if rdt_size then
						this.size = rdt_size
					else
						this.size = 30
						rdt_size = 30
					end

					this:ClearAllPoints()
					this:SetPoint("CENTER", UIParent, "CENTER", this.ofsx, this.ofxy)
					this:SetWidth(this.size)
					this:SetHeight(this.size)

					hasAddonBeenLoaded = true
				end
			</OnEvent>
			<OnLoad>
				this:RegisterForDrag("LeftButton");
				this:RegisterEvent("ADDON_LOADED")

				eventEmitter:AddSubscriber("TARGET_CHANGED", this:GetName(), checkRange)
				eventEmitter:AddSubscriber("TARGET_LOST", this:GetName(), lostTarget)
			</OnLoad>
			<OnDragStart>this:StartMoving();</OnDragStart>
			<OnDragStop>
				this:StopMovingOrSizing()
			
				local point, relativeTo, relativePoint, xOfs, yOfs = RangeDetector:GetPoint()
				rdt_x = xOfs
				rdt_y = yOfs
				this.ofsx = xOfs
				this.ofsy = yOfs
			</OnDragStop>
		</Scripts>
	</Frame>

	<!-- Menu frame -->
	<Frame name="MenuFrame" toplevel="true" movable="true" enableMouse="true" hidden="true" parent="UIParent">
		<Size>
			<AbsDimension x="250" y="300" />
		</Size>

		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>

		<Backdrop bgFile="Interface\TutorialFrame\TutorialFrameBackground" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
			<EdgeSize val="32" />
			<TileSize val="64" />
			<BackgroundInsets left="5" right="5" top="5" bottom="5" />
		</Backdrop>

		<Layers>
			<Layer>
				<FontString name="MenuFrame_settings_text" inherits="GameFontNormal" text="Range Detector settings">
					<Size x="100" y="32" />
					<Anchors>
						<Anchor point="TOP">
							<Offset x="0" y="-20" />
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>

		<Frames>
			<Slider name="SizeSlider" orientation="HORIZONTAL" enableMouse="true" minValue="10" maxValue="100" valueStep="10" defaultValue="30">
				<Size>
					<AbsDimension x="180" y="17"/>
				</Size>

				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="30" y="-90" />
						</Offset>
					</Anchor>
				</Anchors>

				<Backdrop bgFile="Interface\Buttons\UI-SliderBar-Background" edgeFile="Interface\Buttons\UI-SliderBar-Border" tile="true">
					<EdgeSize>
						<AbsValue val="8"/>
					</EdgeSize>
					<TileSize>
						<AbsValue val="8"/>
					</TileSize>
					<BackgroundInsets>
						<AbsInset left="3" right="3" top="6" bottom="6"/>
					</BackgroundInsets>
				</Backdrop>

				<ThumbTexture name="mysliderthumb" file="Interface\Buttons\UI-SliderBar-Button-Horizontal">
					<Size>
						<AbsDimension x="32" y="32"/>
					</Size>
				</ThumbTexture>

				<Layers>
					<Layer>
						<FontString name="Slider_size" inherits="GameFontNormalSmall" text="Size:">
							<Size x="50" y="32" />
							<Anchors>
								<Anchor point="TOPLEFT">
									<Offset x="0" y="30" />
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>

				<Scripts>
					<OnShow>
						this:SetValue(RangeDetector.size)
					</OnShow>
					<OnValueChanged>
						local newValue = this:GetValue()
						RangeDetector:SetWidth(newValue)
						RangeDetector:SetHeight(newValue)
						RangeDetector.size = tonumber(newValue)
						rdt_size = tonumber(newValue)
					</OnValueChanged>
        		</Scripts>
			</Slider>

			<EditBox name="ActionSlotEdit" autoFocus="false">
				<Size>
					<AbsDimension x="270" y="17"/>
				</Size>

				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="40" y="-150" />
						</Offset>
					</Anchor>
				</Anchors>

				<Layers>
					<Layer level="BACKGROUND">
						<Texture file="Interface\ChatFrame\UI-ChatInputBorder-Left">
							<Size x="80" y="30" />
							<Anchors>
								<Anchor point="LEFT">
									<Offset x="-20" y="0" />
								</Anchor>
							</Anchors>
							<TexCoords left="0" right="0.2" top="0" bottom="1.0"/>
						</Texture>
						<Texture file="Interface\ChatFrame\UI-ChatInputBorder-Right">
							<Size x="120" y="30" />
							<Anchors>
								<Anchor point="RIGHT">
									<Offset x="-90" y="0" />
								</Anchor>
							</Anchors>
							<TexCoords left="0.7" right="1.0" top="0" bottom="1.0"/>
						</Texture>
        			</Layer>

					<Layer>
						<FontString name="ActionSlotEditText" inherits="GameFontNormalSmall" text="Action slot:">
							<Size x="100" y="32" />
							<Anchors>
								<Anchor point="TOPLEFT">
									<Offset x="-20" y="35" />
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>

      			<FontString inherits="GameFontNormal">
					<Color r="1" g="1" b="1" a="1" />
				</FontString>

				<Scripts>
					<OnShow>this:SetText(tostring(RangeDetector.slot))</OnShow>
				</Scripts>
			</EditBox>

			<Button name="ActionSlotEditButton">
				<Size>
					<AbsDimension x="65" y="35" />
				</Size>

				<Anchors>
					<Anchor point="CENTER">
						<Offset>
							<AbsDimension x="0" y="-50" />
						</Offset>
					</Anchor>
				</Anchors>

				<NormalTexture file="Interface\Buttons\UI-DialogBox-Button-Up" />
				<PushedTexture file="Interface\Buttons\UI-DialogBox-Button-Down" />
				<HighlightTexture file="Interface\Buttons\UI-DialogBox-Button-Highlight" alphaMode="ADD" />

				<Layers>
					<Layer>
						<FontString name="ActionSlotEditOkText" inherits="GameFontNormalSmall" text="OK">
							<Size x="100" y="32" />
							<Anchors>
								<Anchor point="CENTER">
									<Offset x="0" y="5" />
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>

				<Scripts>
					<OnMouseDown>
						ActionSlotEdit:ClearFocus()
						RangeDetector.slot = tonumber(ActionSlotEdit:GetText())
						rdt_slot = tonumber(ActionSlotEdit:GetText())
					</OnMouseDown>
				</Scripts>
			</Button>

			<Button name="CloseMenuButton">
				<Size>
					<AbsDimension x="75" y="35" />
				</Size>

				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset>
							<AbsDimension x="-20" y="10" />
						</Offset>
					</Anchor>
				</Anchors>

				<NormalTexture file="Interface\Buttons\UI-DialogBox-Button-Up" />
				<PushedTexture file="Interface\Buttons\UI-DialogBox-Button-Down" />
				<HighlightTexture file="Interface\Buttons\UI-DialogBox-Button-Highlight" alphaMode="ADD" />

				<Layers>
					<Layer>
						<FontString name="CloseMenuButtonText" inherits="GameFontNormalSmall" text="Close">
							<Size x="100" y="32" />
							<Anchors>
								<Anchor point="CENTER">
									<Offset x="0" y="5" />
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
				</Layers>

				<Scripts>
					<OnMouseUp>this:GetParent():Hide()</OnMouseUp>
				</Scripts>
			</Button>
		</Frames>
		<Scripts>
			<OnLoad>this:RegisterForDrag("LeftButton");</OnLoad>
			<OnDragStart>this:StartMoving();</OnDragStart>
			<OnDragStop>this:StopMovingOrSizing();</OnDragStop>
		</Scripts>
	</Frame>
</Ui>